---
layout: layouts/base.njk
---

{% include "partials/notice.njk" %}

{% include "partials/nav.njk" %}


<div class="md.hidden" x-data="{open: false}">
  <nav class="mt-10 sm.mt-20 px-20 sm.px-32">
    <div class="max-w-1280 mx-auto">
      <div class="flex align-items-center justify-content-between h-72 mx-auto">
        <div class="w-256 flex align-items-center">
          <a href="/" class="inline-flex align-items-center text-xl sm.text-2xl semibold tracking-tight">
            <img src="/assets/img/uniform-brandmark.svg" class="w-24 h-24 sm.w-28 sm.h-28 mr-12">
            Uniform <span class="hidden sm.inline-flex align-items-center ml-12 px-6 py-2 bg-primary bg-opacity-15 color-primary color-900 uppercase font-2xs bold tracking-loose radius-sm">0.9.0</span>
          </a>
        </div>


        <button @click.prevent="open = !open" class="relative inline-flex align-items-center h-36 px-14 bg-primary bg-opacity-10 bg-800 hover.bg-opacity-15 transition-100 radius-md semibold text-sm color-primary color-900">
          Menu
        </button>
        
      </div>
    </div>
  </nav>
  <div class="fixed top-0 right-0 w-100p h-100vh bg-black bg-opacity-20 z-1"
    x-cloak
    @click.prevent="open = !open"
    x-show.transition.opacity.duration.300="open === true">
  </div>

  <div class="fixed top-0 right-0 w-288 h-100vh p-24 overflow-auto bg-white z-1"
    x-cloak
    x-show="open === true"
    x-transition:enter="transition-300"
    x-transition:enter-start="transform translate-x-288"
    x-transition:enter-end="transform"
    x-transition:leave="transition-300"
    x-transition:leave-start="transform translate-x-0"
    x-transition:leave-end="transform translate-x-288">
    {% include "partials/sidebar-api-reference.njk" %}
  </div>
  
</div>

<main class="px-10 sm.px-32">
  <div class="max-w-1280 mx-auto">
  
    <div class="flex">
      <aside class="hidden md.block w-256 flex-none">
        <div class="top-72 sticky h-100vh overflow-auto pl-20 pr-40 pt-48 pb-192 ml-n20">

          {% include "partials/sidebar-api-reference.njk" %}

        </div>
      </aside>

      

      <section class="docsearch-content overflow-auto flex-1 mt-10 sm.mt-20 md.mt-48 mb-112 bg-white shadow-card radius-2xl px-20 sm.px-72 py-64">
        <h1 class="text-5xl lg.text-6xl extrabold color-primary color-900 tracking-tight mb-10">
          <span class="color-primary color-400">{{ title | safe }}</span>
        </h1>
        <p class="text-xl tracking-tight mb-56">
          {{ description | safe }}
        </p>
        <hr class="border-t-4 border-dotted border-cool-gray border-100">
        
        {%- for propertyKey, propertyValue in properties -%}
          {%- for key in propertyValue -%}
            <article>
              <header class="mb-20">
                <h2 id="{{ key.name | slug }}" class="flex align-items-end mb-20 pt-64 text-2xl bold tracking-tight color-primary color-900">
                  {{ key.name }}
                </h2>

                <div class="radius-md overflow-hidden">
<pre class="language-scss"><code class="language-scss"><span class="token property">responsive</span><span class="token punctuation">: </span>{%- if key.responsive -%}<span class="token boolean">true</span>{%- else -%}<span class="token boolean">false</span>{%- endif -%}<span class="token punctuation">,</span> <span class="token property">pseudos</span><span class="token punctuation">:</span> <span class="token punctuation">(</span>{{ key.pseudos }}<span class="token punctuation">)</span></code></pre>
                </div>
              </header>

              
              
              <div class="radius-md max-h-320 overflow-auto bg-cool-gray bg-50 bg-opacity-60">
                <table class="w-100p">
                  <tbody>
                    {%- for utility in key.utilities -%}
                      <tr class="border-b-1 border-cool-gray border-100 last.border-b-0">
                        <td class="w-3-12 text-xs color-primary color-600 select-all align-top bg-cool-gray bg-100 bg-opacity-30 pr-40 px-20 py-8">
                          <code class="whitespace-nowrap">{{utility.class}} <span class="opacity-30">{{ key.extraSelector }}</span></code>
                        </td>
                        <td class="text-xs color-cool-gray align-top px-20 py-8">
                          <pre class="overflow-auto">
                          {%- for item in key.customProperties -%}
                            <code class="opacity-70">{{ item }}</code><br>
                          {%- endfor -%}
                          {%- for item in utility.properties -%}
                            <code>{{ item }}</code><br>
                          {%- endfor -%}
                          </pre>
                        </td>
                      </tr>
                    {%- endfor -%}
                  </tbody>
                </table>
              </div>

              
              
            </article>
          {%- endfor -%}
        {%- endfor -%}

      </section>


    </div>
  </div>
</main>

















