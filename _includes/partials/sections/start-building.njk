                {% include "partials/api/radius.njk" %}
              </div>

              <div class="w-100p h-100p" x-show.transition.in.duration.600="activeAPI === 4">
                {% include "partials/api/shadow.njk" %}
              </div>

              <div class="absolute bottom-0 left-0 flex flex-col w-100p h-192 z-2">
                <div class="h-192 bg-linear-y-to-white"></div>
              </div>

              

            </article>

          </div>
        </div>
      </div>
    </div>
  </div>

</section>














