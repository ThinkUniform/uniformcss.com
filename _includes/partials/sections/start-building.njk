                {% include "partials/ui/calendar.njk" %}
              </div>

              <div 
                x-cloak x-show="activeUI === 1"
                x-transition:enter.duration.400ms
              >
                {% include "partials/ui/ecommerce.njk" %}
              </div>

              <div 
                x-cloak x-show="activeUI === 2"
                x-transition:enter.duration.400ms
