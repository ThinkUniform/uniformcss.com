              <div x-show.transition.in.duration.600="activeUI === 0">
                {% include "partials/ui/calendar.njk" %}
              </div>

              <div x-cloak x-show.transition.in.duration.600="activeUI === 1">
                {% include "partials/ui/ecommerce.njk" %}
              </div>

              <div x-cloak x-show.transition.in.duration.600="activeUI === 2">
                {% include "partials/ui/pop-up.njk" %}
              </div>

              <div x-cloak x-show.transition.in.duration.600="activeUI === 3">
