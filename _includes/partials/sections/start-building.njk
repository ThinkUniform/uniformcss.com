              <div class="w-100p h-100p" 
                x-show="activeAPI === 0"
                x-transition:enter.duration.400ms
              >
                {% include "partials/api/sizing.njk" %}
              </div>

              <div class="w-100p h-100p" 
                x-show="activeAPI === 1"
                x-transition:enter.duration.400ms
              >
                {% include "partials/api/typography.njk" %}
              </div>

              <div class="w-100p h-100p" 
                x-show="activeAPI === 2"
                x-transition:enter.duration.400ms
              >
                {% include "partials/api/color.njk" %}
              </div>

              <div class="w-100p h-100p" 
                x-show="activeAPI === 3"
                x-transition:enter.duration.400ms
              >
                {% include "partials/api/radius.njk" %}
              </div>

              <div class="w-100p h-100p" 
                x-show="activeAPI === 4"
                x-transition:enter.duration.400ms
              >
                {% include "partials/api/shadow.njk" %}
              </div>

              <div class="absolute bottom-0 left-0 flex flex-col w-100p h-192 z-2">
                <div class="h-192 bg-linear-y-to-white"></div>
              </div>

              

            </article>

          </div>
        </div>
      </div>
    </div>
  </div>

</section>














