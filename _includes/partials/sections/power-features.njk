                {% highlight "scss" %}
                {{ config_apply_input | safe }}
                {% endhighlight %}
              </article>

              <article class="md.radius-xl overflow-hidden bg-black mb-20">
                {% highlight "css" %}
                {{ config_apply_output | safe }}
                {% endhighlight %}
              </article>
            </div>

            <div 
              x-cloak 
              x-show="activeFeature === 1"
              x-transition:enter.duration.600ms
            >
              <article class="md.radius-xl overflow-hidden bg-black mb-20">
                {% highlight "scss" %}
                {{ config_api_functions_input | safe }}
                {% endhighlight %}
              </article>

              <article class="md.radius-xl overflow-hidden bg-black mb-20">
                {% highlight "css" %}
                {{ config_api_functions_output | safe }}
                {% endhighlight %}
              </article>
            </div>

            <div 
              x-cloak 
              x-show="activeFeature === 2"
              x-transition:enter.duration.600ms
            >
              <article class="md.radius-xl overflow-hidden bg-black mb-20">
                {% highlight "scss" %}
                {{ config_helpers_input | safe }}
                {% endhighlight %}
              </article>

              <article class="md.radius-xl overflow-hidden bg-black mb-20">
                {% highlight "css" %}
                {{ config_helpers_output | safe }}
                {% endhighlight %}
              </article>
            </div>


          </div>
        </div>
      </div>
    </div>
  </div>

</section>










