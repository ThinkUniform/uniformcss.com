        .m-1 {
          margin: 0.0625rem !important;
        }

        .m-2 {
          margin: 0.125rem !important;
        }

        .m-4 {
          margin: 0.25rem !important;
        }

        .m-6 {
          margin: 0.375rem !important;
        }

        .m-8 {
          margin: 0.5rem !important;
        }

        .m-10 {
          margin: 0.625rem !important;
        }

        ...

    delimiters:
      sass: |
        @use "uniform" as * with (
          $config: (
            // Customize the delimiter used to separate keyword and variant.
            delimiter: '--',
            pseudo-delimiter: '__',
            screen-delimiter: '.',

            // Exclude all CSS properties in the output.
            excludes: (
              all
            ),

            // Only include `opacity` in the output.
            includes: (
              opacity
            )
          )
        );
      
      css: |
        .opacity--100 {
          opacity: 1;
        }

        .hover__opacity--100:hover {
          opacity: 1;
        }

        @media (min-width: 768px) {
          .sm\.opacity--100 {
            opacity: 1;
          }

          .sm\.hover__opacity--100:hover {
            opacity: 1;
          }
        }
    commaCompression:
      sass: |
        @use "uniform" as * with (
          $config: (
            // Append a prefix to each utility.
            prefix: 'u-',

            // Exclude all CSS properties in the output.
            excludes: (
              all
            ),

            // Only include `display` in the output.
            includes: (
              display
            )
          )
        );
      css: |
        .opacity-0, .focus\.opacity-0:focus, .group:hover .group-hover\.opacity-0, .hover\.opacity-0:hover {
          opacity: 0;
        }

        .opacity-2, .focus\.opacity-2:focus, .group:hover .group-hover\.opacity-2, .hover\.opacity-2:hover {
          opacity: 0.02;
        }

        .opacity-4, .focus\.opacity-4:focus, .group:hover .group-hover\.opacity-4, .hover\.opacity-4:hover {
          opacity: 0.04;
        }

        .opacity-6, .focus\.opacity-6:focus, .group:hover .group-hover\.opacity-6, .hover\.opacity-6:hover {
          opacity: 0.06;
        }

        .opacity-8, .focus\.opacity-8:focus, .group:hover .group-hover\.opacity-8, .hover\.opacity-8:hover {
          opacity: 0.08;
        }

        .opacity-15, .focus\.opacity-15:focus, .group:hover .group-hover\.opacity-15, .hover\.opacity-15:hover {
          opacity: 0.15;
        }

        ...
    prefix:
