        }

        .u-inline-flex {
          display: inline-flex;
        }

        ...
    apply:
      sass: |
        @use "uniform" as *;

        .block {
          @include apply('overflow-hidden radius-sm');

          &__element {
            @include apply('flex align-items-center h-40 px-12 shadow-2xs radius-sm p-24 md.p-64');

            &--modifier {
              @include apply('w-100p radius-none')
            }
          }
        }

      css: |
        .block {
          overflow: hidden;
          border-radius: var(--radius-sm);
        }

        .block__element {
          display: flex;
          align-items: center;
          height: 2.5rem;
          padding-left: 0.75rem;
          padding-right: 0.75rem;
          box-shadow: var(--shadow-2xs);
          border-radius: var(--radius-sm);
          padding: 1.5rem;
        }

        @media (min-width: 1024px) {
          .block__element {
            padding: 4rem;
          }
        }

        .block__element--modifier {
          width: 100%;
          border-radius: 0;
        }
    apiFunctions:
      sass: |
        @use "uniform" as *;

        .block {
          padding: size(24, 32);
          background: fill(red-400, .4);
          border-radius: radius(lg);
          box-shadow: shadow(sm);

          &__element {
            border-radius: radius(lg);
            box-shadow: shadow(sm);
            font-family: font(sans);
            font-size: font(lg);
            font-weight: font(semibold);
            line-height: leading(looser);

            &--modifier {
              letter-spacing: tracking(loose);
            }
          }
        }

      css: |
        .block {
          padding: 1.5rem 2rem;
          background: rgba(var(--red-400), 0.4);
          border-radius: var(--radius-lg);
          box-shadow: var(--shadow-sm);
        }

        .block__element {
          border-radius: var(--radius-lg);
          box-shadow: var(--shadow-sm);
          font-family: var(--font-sans);
          font-size: var(--font-lg);
          font-weight: var(--font-semibold);
          line-height: var(--leading-looser);
        }

        .block__element--modifier {
          letter-spacing: var(--tracking-loose);
        }
    helperMixins:
      sass: |
        @use "uniform" as *;

        .block {
          font-size: rem(11);
          
          &--modifier {
            @include screen(sm) {
              font-size: rem(13);
            }
          }

          @each $breakpoint, $breakpoint-value in screens() {
            // for each breakpoint, do the following
            @include screen($breakpoint) {
              &__element-#{$breakpoint} {
                font-size: rem(16);
              }
            }
          }
        }

      css: |
        .block {
          font-size: 0.6875rem;
        }
        @media (min-width: 768px) {
          .block--modifier {
            font-size: 0.8125rem;
          }
        }
        @media (min-width: 768px) {
          .block__element-sm {
            font-size: 0.9375rem;
          }
        }
        @media (min-width: 1024px) {
          .block__element-md {
            font-size: 0.9375rem;
          }
        }
        @media (min-width: 1280px) {
          .block__element-lg {
            font-size: 0.9375rem;
          }
        }
    headlessMode:
      sass: |
        @use "uniform" as * with (
          $config: (
            output: 'headless'
          )
        );

        .block {
          @include apply('overflow-hidden radius-sm');

          &__element {
            @include apply('flex align-items-center h-40 px-12 shadow-2xs radius-sm p-24 md.p-64');

            &--modifier {
              @include apply('w-100p radius-none')
            }
          }
        }

      css: |
        .block {
          overflow: hidden;
          border-radius: var(--radius-sm);
        }

        .block__element {
          display: flex;
          align-items: center;
          height: 2.5rem;
          padding-left: 0.75rem;
          padding-right: 0.75rem;
          box-shadow: var(--shadow-2xs);
          border-radius: var(--radius-sm);
          padding: 1.5rem;
        }

        @media (min-width: 1024px) {
          .block__element {
            padding: 4rem;
          }
        }

        .block__element--modifier {
          width: 100%;
          border-radius: 0;
        }
    jsonOutput:
      sass: |
        @use "uniform" as * with (
          $config: (
            output: 'json',

            excludes: (
              all
            ),

            includes: (
              align-content
            )
          )
        );

      json: |
        {
          "align-content": {
            "important": "false",
            "extra-selector": "",
            "responsive": "true",
            "pseudos": "none",
            "classes": {
              "align-content-center": {
                "align-content": "center"
              },
              "align-content-start": {
                "align-content": "flex-start"
              },
              "align-content-end": {
                "align-content": "flex-end"
              },
              "align-content-between": {
                "align-content": "space-between"
              },
              "align-content-around": {
                "align-content": "space-around"
              },
              "align-content-evenly": {
                "align-content": "space-evenly"
              }
            }
          }
        }




